/* pages/mywalk/mywalk.wxss */
page{
    background: linear-gradient(#ffb053,#ff7444);
    width: 750rpx;
    height: 100%;
    overflow-x: hidden;
}
.disable{
    pointer-events: none;
}
.container{
    width: 750rpx;
    height: 100%;
    overflow-x: hidden;
}
.charts_warp{
    width: 702rpx;
    height: 456rpx;
    background-color: #ffffff;
    margin: 24rpx auto 40rpx;
    border-radius: 10rpx;
}
.bushu{
    height: 92rpx;
    line-height: 92rpx;
    display: block;
    font-size: 34rpx;
    font-family: PingFangsc-Medium;
    padding-left: 36rpx;
    color: #595959;
}
.canvas_warp{
    width: 750rpx; 
    height: 364rpx;
    display: block;
    margin: 0 auto; 
}
.canvas_warp view.show{
    display: block;
}
.canvas_warp view.hide{
    display: none;
}
canvas{
    height: 364rpx;
    width: 702rpx;
}
.type_warp{
    width: 606rpx;
    border-radius: 10rpx;
    margin: 0 auto;
    box-shadow: 0 4rpx 13rpx rgba(0, 0, 0, 0.1);
    background-color: #5bb729; 
}
.type{
    width: 494rpx;
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    height: 82rpx;
    line-height: 82rpx;
    color: #cccccc;
    font-size: 34rpx;
    font-family: PingFangSC-Medium;
}
.type text{
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.type_warp .selected{
    color: #ffffff;
}
/*  */
.rank{
    margin-top: 50rpx;
    width: 750rpx;
}
.rank_img{
    width: 120rpx;
    height: 120rpx;
    border: solid 2px #7ce742;
    border-radius: 50%;
    display: block;
    margin: 0 auto 34rpx;
}
.rank_info{
    width: 750rpx;
    display: flex;
    flex-direction: row;
    color: #f5f5f5;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
}
.rank_info view{
    width: 33.3%;
}
.rank_info text{
    display: block;
    text-align: center;
}
.rank_info text:nth-child(1){
    display: block;
    text-align: center;
    color: #ffffff;
    margin-bottom: 30rpx;
    font-size: 34rpx;
    font-weight: bold;
}
.tab_switch{
    width: 100%;
    height: 98rpx;
    display: flex;
    justify-content: space-between; 
    position: fixed;
    bottom: 0;
}

.tab_switch button{
    width: 50%;
    border-radius: 0;
    background-color: #f6f6f6;
}