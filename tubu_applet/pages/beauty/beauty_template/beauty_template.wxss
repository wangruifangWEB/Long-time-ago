
.beauty_list {
    width: 624rpx;
    margin: auto;
    display: flex;
    flex-direction: row;
    background-color: #f6f6f6;
    margin-bottom: 32rpx;
}
.beauty_list_left {
    width: 240rpx;
    height: 384rpx;
    position: relative;
}

.delete {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    z-index: 10;
}

.info {
    display: block;
    width: 100%;
    padding-top: 10rpx;
    height: 125rpx;
    text-align: center;
    color: #f69200;
    border-bottom: #d8d8d8 solid 1rpx;
    margin-top: 10rpx;
    overflow: hidden;
}

.info .address {
    display: block;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.info .time {
    margin-top: 10rpx;
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 28rpx;
}

.thumbs, .comment {
    padding: 10rpx 0;
    height: 100rpx;
    overflow: hidden;
}

.thumbs {
    border-bottom: #d8d8d8 solid 1rpx;
}

.thumbs text, .comment text {
    display: block;
    color: #595959;
    text-align: center;
    font-size: 26rpx;
    padding-top: 5rpx;
}

.thumbs .thumbs_num, .comment .comment_num {
    color: #f69200;
    font-size: 48rpx;
}

.beauty_list_right {
    width: 384rpx;
    height: 384rpx;
    position: relative;
}

.beauty_list_right .beauty_show_pic {
    width: 384rpx;
    height: 384rpx;
    border-top-right-radius: 10rpx;
}

.beauty_right_info {
    position: absolute;
    z-index: 10;
    bottom: 0;
    width: 384rpx;
    height: 56rpx;
    background-color: rgba(0, 0, 0, 0.4);
    display: flex;
    flex-direction: row;
}

.user_pic {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    margin-left: 20rpx;
}

.pic_notice {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
}

.fabu_name {
    vertical-align: middle;
    margin-left: 15rpx;
    color: #f6f6f6;
    font-size: 32rpx;
    line-height: 56rpx;
    height: 56rpx;
    font-weight: 600;
}

.pic_count {
    margin-top: 5rpx;
    font-size: 32rpx;
    color: #40dbf1;
    vertical-align: middle;
    height: 42rpx;
    line-height: 42rpx;
    border: solid 1px #40dbf1;
    border-radius: 50%;
    width: 42rpx;
    text-align: center;
    margin-right: 20rpx;
}
