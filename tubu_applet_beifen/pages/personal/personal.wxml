<view class="container">
    <view class='info'>
        <view class='info_top'>
            <view class='info_left'>
                <text class='passport'>徒步护照</text>
                <view class="enroll">
                    <text class="enroll_num">{{enroll_num}}</text>
                    <text>报名次数</text>
                </view>
                <view class="join">
                    <text class="join_num">{{join_num}}</text>
                    <text>参加次数</text>
                </view>
            </view>
            <view class='info_right'>
                <image src='../../images/header.jpg'></image>
            </view>
        </view>
        <view class='info_bottom'>
            <text>活跃度</text>
            <view class="liveness_warp">
                <image animation="{{scaleCount}}" class='liveness' src='https://www.sqbqr.cn/Public/Home/images/huoyue_jindu_bai.png'></image>
            </view>
        </view>
    </view>

    <!-- form -->
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section">
            <view class="{{showUserText ? 'showText' : 'hideText'}} notice_text">
                <text class="section_title">姓名</text>
                <image wx:if="{{regUser==1}}" src='../../images/notice_white.png'></image>
                <image wx:if="{{regUser==2}}" class="add_transform" src='../../images/notice_red.png'></image>
                <image wx:if="{{regUser==3}}" src='../../images/notice_green.png'></image>
            </view>
            <input name="input" disabled="{{userDis}}" type='text' value='{{userInfo}}' class='section_cont' focus='{{userfocus}}' placeholder="姓名" placeholder-class="placeholder" bindfocus="userFocusfn" bindblur="userBlurfn" bindinput="userInputfn" />
            <image wx:if="{{userDelete}}" class='delete_input' bindtap='userDeletefn' src="https://www.sqbqr.cn/Public/Home/images/notice_gray.png"></image>
        </view>

        <view class="section">
            <view class="{{showTelText ? 'showText' : 'hideText'}} notice_text">
                <text class="section_title">电话</text>
                <image wx:if="{{regTel==1}}" src='../../images/notice_white.png'></image>
                <image wx:if="{{regTel==2}}" class="add_transform" src='../../images/notice_red.png'></image>
                <image wx:if="{{regTel==3}}" src='../../images/notice_green.png'></image>
            </view>
            <input name="input" disabled='{{telDis}}' type='text' value='{{telInfo}}' class='section_cont' focus='{{Telfocus}}' placeholder="电话" placeholder-class="placeholder" bindfocus="telFocusfn" bindblur="telBlurfn" bindinput="telInputfn" />
            <image wx:if="{{telDelete}}" class='delete_input' bindtap='telDeletefn' src="https://www.sqbqr.cn/Public/Home/images/notice_gray.png"></image>
        </view>
        <view class='section'>
            <text class='section_title'>工作行业</text>
            <picker bindchange="industryfn" disabled='{{industryDis}}' range="{{array1}}"  value="{{index1}}">
                <view class="picker">{{array1[index1]}}</view>
            </picker>
        </view>

        <view class='section'>
            <text class='section_title'>工作岗位</text>
            <picker bindchange="quarterfn" disabled='{{quartersDis}}' range="{{array2}}"  value="{{index2}}">
                <view class="picker">{{array2[index2]}}</view>
            </picker>
        </view>

        <view class="section">
            <view class="{{showCardText ? 'showText' : 'hideText'}} notice_text">
                <text class="section_title">身份证号</text>
                <image wx:if="{{regCard==1}}" src='../../images/notice_white.png'></image>
                <image wx:if="{{regCard==2}}" class="add_transform" src='../../images/notice_red.png'></image>
                <image wx:if="{{regCard==3}}" src='../../images/notice_green.png'></image>
            </view>
            <input name="input" disabled='{{cardDis}}' type='text' value='{{cardInfo}}' class='section_cont' focus='{{cardfocus}}' placeholder="身份证号" placeholder-class="placeholder" bindfocus="cardFocusfn" bindblur="cardBlurfn" bindinput="cardInputfn" />
            <image wx:if="{{cardDelete}}" class='delete_input' bindtap='cardDeletefn' src="https://www.sqbqr.cn/Public/Home/images/notice_gray.png"></image>
        </view>

        <view class="section">
            <view class="{{showSexText ? 'showText' : 'hideText'}} notice_text">
                <text class="section_title">性别</text>
                <image wx:if="{{regSex==1}}" src='../../images/notice_white.png'></image>
                <image wx:if="{{regSex==2}}" class="add_transform" src='../../images/notice_red.png'></image>
                <image wx:if="{{regSex==3}}" src='../../images/notice_green.png'></image>
            </view>
            <input name="input" disabled='{{sexDis}}' type='text' value='{{sexInfo}}' class='section_cont' focus='{{sexfocus}}' placeholder="性别" placeholder-class="placeholder" bindfocus="sexFocusfn" bindblur="sexBlurfn" bindinput="sexInputfn" />
            <image wx:if="{{sexDelete}}" class='delete_input' bindtap='sexDeletefn' src="https://www.sqbqr.cn/Public/Home/images/notice_gray.png"></image>
        </view>

        <view class="section">
            <view class="{{showAgeText ? 'showText' : 'hideText'}} notice_text">
                <text class="section_title">年龄</text>
                <image wx:if="{{regAge==1}}" src='../../images/notice_white.png'></image>
                <image wx:if="{{regAge==2}}" class="add_transform" src='../../images/notice_red.png'></image>
                <image wx:if="{{regAge==3}}" src='../../images/notice_green.png'></image>
            </view>
            <input name="input" disabled='{{ageDis}}' type='text' value='{{ageInfo}}' class='section_cont' focus='{{agefocus}}' placeholder="年龄" placeholder-class="placeholder" bindfocus="ageFocusfn" bindblur="ageBlurfn" bindinput="ageInputfn" />
            <image wx:if="{{ageDelete}}" class='delete_input' bindtap='ageDeletefn' src="https://www.sqbqr.cn/Public/Home/images/notice_gray.png"></image>
        </view>

        <view class="section">
            <view class="{{showStatureText ? 'showText' : 'hideText'}} notice_text">
                <text class="section_title">身高（cm）</text>
                <image wx:if="{{regStature==1}}" src='../../images/notice_white.png'></image>
                <image wx:if="{{regStature==2}}" class="add_transform" src='../../images/notice_red.png'></image>
                <image wx:if="{{regStature==3}}" src='../../images/notice_green.png'></image>
            </view>
            <input name="input" disabled='{{statureDis}}' type='text' value='{{statureInfo}}' class='section_cont' focus='{{staturefocus}}' placeholder="身高（cm）" placeholder-class="placeholder" bindfocus="statureFocusfn" bindblur="statureBlurfn" bindinput="statureInputfn" />
            <image wx:if="{{statureDelete}}" class='delete_input' bindtap='statureDeletefn' src="https://www.sqbqr.cn/Public/Home/images/notice_gray.png"></image>
        </view>
